source "https://rubygems.org"

# Pin to GitHub Pages to match GitHub build environment
# Alternatively, you can use plain `jekyll` if you donâ€™t need strict GH Pages parity
gem "jekyll", "~> 4.3.3"

group :jekyll_plugins do
  gem "jekyll-remote-theme"
  gem "jekyll-seo-tag"
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-include-cache"
